{
  "manifest_version": 3,
  "name": "Random Password Generator",
  "version": "1.0",
  "description": "Secure Random Password Generator: instantly creates strong 4‑64 character passwords. One‑click copy generate password.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
